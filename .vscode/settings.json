{
  // Configurações da fonte JetBrains Mono
  "editor.fontSize": 17,
  "editor.lineHeight": 24,
  "editor.fontLigatures": true,
  //Aumenta a font do terminal
  "terminal.integrated.fontSize": 15,
  // Define o tema do VSCode
  "workbench.colorTheme": "Dracula",
  // Define o tema dos icones da menu lateral
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  // Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  // Aplica alteracoes no codigo com base no ESlint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Valida o codigo com base no tipo de linguagem utilizada
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    ".prettierrc": "json"
  },
  "explorer.compactFolders": false,
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.labelFormat": "short",
  "extensions.ignoreRecommendations": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "breadcrumbs.enabled": true,
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "terminal.integrated.shell.osx": "/bin/zsh",
  //Define GitBash como terminal padrao
  // "terminal.integrated.shell.windows": "C:\\Users\\dcruz\\AppData\\Local\\hyper\\Hyper.exe",
  // "terminal.integrated.shell.windows": "C:\\Users\\dcruz\\AppData\\Local\\hyper\\Hyper.exe",
  // "terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
  "git.ignoreWindowsGit27Warning": true,
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "interfaces": "class",
    "schemas": "class",
    "typeorm": "database",
    "http": "container",
    "repositories": "mappings",
    "entities": "class",
    "useCase": "controller",
    "eslint-config": "shared",
    "bat": "batch",
    "enums": "other",
    "migrations": "tools",
    "dtos": "typescript",
    "fakes": "mock",
    "modules": "components",
    "implementations": "core",
    "sefaz": "template",
    "axios": "generator",
    "fast-xml-parser": "resource",
    "usuarios": "delta"
  },

  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "window.zoomLevel": -2,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.shellArgs.windows": ["--login"]
}
